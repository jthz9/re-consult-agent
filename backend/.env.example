# === OpenAI API 설정 ===
OPENAI_API_KEY=your_openai_api_key_here

# === 환경 설정 ===
ENVIRONMENT=development
DEBUG=true

# === Chroma DB 설정 ===
CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_PERSIST_DIRECTORY=./data/vectorstores

# === FastAPI 설정 ===
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# === 로깅 설정 ===
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# === 크롤링 설정 ===
CRAWLER_DELAY=1
CRAWLER_TIMEOUT=30
CRAWLER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# === 벡터 스토어 설정 ===
VECTOR_STORE_DIR=./data/vectorstores
COLLECTION_NAME=renewable_energy_docs
EMBEDDING_DIMENSION=768

# === 임베딩 모델 설정 ===
EMBEDDING_MODEL_NAME=jhgan/ko-sroberta-multitask
EMBEDDING_MODEL_TYPE=huggingface
EMBEDDING_DEVICE=cpu

# === LLM 설정 ===
LLM_MODEL_NAME=gpt-4o
LLM_TEMPERATURE=0.5
LLM_MAX_TOKENS=2000

# === 데이터 디렉토리 설정 ===
DATA_DIR=./data
CRAWLED_DATA_DIR=./data/crawled_data
MODEL_DIR=./data/models
ML_DATA_DIR=./data/ml_data